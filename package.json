  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/RUBBOSS/node-nodejs-basics/issues"
  },
  "homepage": "https://github.com/RUBBOSS/node-nodejs-basics#readme",
  "description": "",
  "dependencies": {
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.14",
    "@types/webpack": "^5.28.5",
    "babel-jest": "^29.7.0",
