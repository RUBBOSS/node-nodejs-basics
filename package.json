    "lint-staged": "^15.5.2",
    "mini-css-extract-plugin": "^2.9.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "sass": "^1.87.0",
    "sass-loader": "^16.0.5",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.2",
